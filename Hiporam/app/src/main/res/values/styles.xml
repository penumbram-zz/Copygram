<resources>
    <style name="CustomActionBarTheme"
           parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
           parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/custom_theme_background</item>
        <item name="android:displayOptions">useLogo</item>
        <item name="displayOptions">useLogo</item>
        <item name="android:homeAsUpIndicator" >@drawable/insta_logo</item>
        <!-- Support library compatibility -->
        <item name="background">@color/custom_theme_background</item>
    </style>
</resources>
